<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="contact"
            type="com.carlosggz.contactsbook.model.ContactDetails" />
    </data>

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ContactDetailsFragment">

        <TextView
            android:id="@+id/contactFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:text="@{contact.firstName}" />

        <TextView
            android:id="@+id/contactLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactFirstName"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:text="@{contact.lastName}" />

    </RelativeLayout>
</layout>